---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/shared/Card.astro";
---

<BaseLayout title="Heart — ugis.upbir.ch" description="The creative side — reading, music, games, and philosophy." hemisphere="heart">
  <main class="flex-1 px-6 py-16 max-w-3xl mx-auto w-full">
    <section class="mb-12">
      <h1 class="text-3xl font-heading font-bold text-accent mb-2">Heart</h1>
      <p class="text-text-muted text-lg">Creativity, culture, play.</p>
    </section>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <Card
        title="Reading"
        description="Sci-fi, stoicism, and the occasional rabbit hole."
        href="/heart/reading"
      />
      <Card
        title="Music"
        description="Vinyl, film scores, and the warmth of analogue."
        href="/heart/music"
      />
      <Card
        title="Games"
        description="Board games, game design, and building Hexagers."
        href="/heart/games"
      />
      <Card
        title="Philosophy"
        description="How I think about things."
        href="/heart/philosophy"
      />
    </div>
  </main>
</BaseLayout>
