---
import BaseLayout from "../../layouts/BaseLayout.astro";

const categories = [
  {
    name: "Languages",
    items: [
      { label: "TypeScript", note: "primary" },
      { label: "JavaScript", note: "primary" },
      { label: "Python", note: "comfortable" },
      { label: "Clojure", note: "comfortable" },
      { label: "Rust", note: "learning" },
    ],
  },
  {
    name: "Frontend",
    items: [
      { label: "Vue 3" },
      { label: "Nuxt 3/4" },
      { label: "Tailwind CSS" },
      { label: "Pinia" },
      { label: "Astro" },
    ],
  },
  {
    name: "Backend",
    items: [
      { label: "Node.js" },
      { label: "Python" },
      { label: "PostgreSQL" },
      { label: "SQLite" },
    ],
  },
  {
    name: "DevOps & Infrastructure",
    items: [
      { label: "Docker" },
      { label: "Podman" },
      { label: "Docker Compose" },
      { label: "Proxmox" },
      { label: "Cloudflare" },
      { label: "AWS" },
      { label: "Arch Linux" },
    ],
  },
  {
    name: "Editor & Tools",
    items: [
      { label: "Neovim" },
      { label: "VS Code" },
      { label: "Zsh" },
      { label: "Git" },
      { label: "Claude Code" },
    ],
  },
  {
    name: "Code Style",
    items: [
      { label: "Prettier" },
      { label: "ESLint" },
      { label: "Vitest" },
      { label: "Conventional Commits" },
    ],
  },
];

const antiPreferences = [
  "React (unless necessary)",
  "Angular",
  "Heavy Java/Spring",
  "Overly abstracted enterprise patterns",
  "Dependency-heavy solutions for simple problems",
  "Config-heavy frameworks",
  "Boilerplate generators",
];
---

<BaseLayout title="Tech Stack — ugis.upbir.ch" description="Languages, frameworks, and tools I work with — TypeScript, Vue, Nuxt, Docker, Proxmox, and more." hemisphere="mind">
  <main class="flex-1 px-6 py-16 max-w-3xl mx-auto w-full">
    <section class="mb-12">
      <h1 class="text-3xl font-heading font-bold text-accent mb-2">Tech Stack</h1>
      <p class="text-text-muted text-lg">Languages, frameworks, and tools I work with.</p>
    </section>

    <div class="space-y-10">
      {categories.map((cat) => (
        <section>
          <h2 class="text-lg font-heading font-bold text-text mb-4">{cat.name}</h2>
          <div class="flex flex-wrap gap-2">
            {cat.items.map((item) => (
              <span class="inline-flex items-center gap-1.5 text-sm px-3 py-1.5 rounded-md bg-surface border border-surface text-accent">
                {item.label}
                {item.note && (
                  <span class="text-xs text-text-muted">({item.note})</span>
                )}
              </span>
            ))}
          </div>
        </section>
      ))}
    </div>

    {/* Anti-preferences */}
    <section class="mt-14 pt-10 border-t border-surface">
      <h2 class="text-lg font-heading font-bold text-text-muted mb-4">Anti-preferences</h2>
      <div class="flex flex-wrap gap-2">
        {antiPreferences.map((item) => (
          <span class="text-sm px-3 py-1.5 rounded-md bg-surface/30 border border-surface/50 text-text-muted">
            {item}
          </span>
        ))}
      </div>
    </section>
  </main>
</BaseLayout>
