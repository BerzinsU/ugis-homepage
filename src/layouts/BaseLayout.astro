---
import "../assets/styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";

interface Props {
  title: string;
  hemisphere?: "mind" | "heart";
}

const { title, hemisphere = "mind" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class={`hemisphere-${hemisphere} min-h-screen flex flex-col`}>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
