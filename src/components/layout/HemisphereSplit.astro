<section class="hemisphere-split">
  <div class="hemisphere-split__mind hemisphere-mind">
    <div class="hemisphere-split__content">
      <slot name="mind" />
    </div>
  </div>
  <div class="hemisphere-split__heart hemisphere-heart">
    <div class="hemisphere-split__content">
      <slot name="heart" />
    </div>
  </div>
</section>

<style>
  .hemisphere-split {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 60vh;
  }

  .hemisphere-split__mind,
  .hemisphere-split__heart {
    flex: 1;
    background-color: var(--bg);
    position: relative;
  }

  .hemisphere-split__content {
    padding: 3rem 2rem;
    max-width: 32rem;
    margin: 0 auto;
  }

  /* Desktop: side-by-side with diagonal divider */
  @media (min-width: 1024px) {
    .hemisphere-split {
      flex-direction: row;
      min-height: 70vh;
    }

    .hemisphere-split__mind {
      flex: 1;
      clip-path: polygon(0 0, 100% 0, calc(100% - 3rem) 100%, 0 100%);
      padding-right: 1.5rem;
    }

    .hemisphere-split__heart {
      flex: 1;
      clip-path: polygon(3rem 0, 100% 0, 100% 100%, 0 100%);
      margin-left: -3rem;
      padding-left: 1.5rem;
    }

    .hemisphere-split__content {
      padding: 3rem;
    }

    .hemisphere-split__mind .hemisphere-split__content {
      margin-left: auto;
      margin-right: 2rem;
    }

    .hemisphere-split__heart .hemisphere-split__content {
      margin-right: auto;
      margin-left: 2rem;
    }
  }
</style>
