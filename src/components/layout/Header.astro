---
import ThemeToggle from "./ThemeToggle.astro";

const navLinks = [
  { label: "CV", href: "/cv" },
  { label: "About", href: "/about" },
];
---

<header class="w-full px-6 py-4 flex items-center justify-between">
  <a href="/" class="font-heading text-lg text-accent hover:text-text transition-colors">
    ugis.upbir.ch
  </a>
  <nav class="flex items-center gap-6">
    {navLinks.map((link) => (
      <a
        href={link.href}
        class="font-body text-sm text-text-muted hover:text-accent transition-colors"
      >
        {link.label}
      </a>
    ))}
    <ThemeToggle />
  </nav>
</header>
